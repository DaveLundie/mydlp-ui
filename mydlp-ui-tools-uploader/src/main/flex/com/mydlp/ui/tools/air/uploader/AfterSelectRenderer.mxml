<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:local="*"
				autoDrawBackground="true" 
				width="100%" height="20" xmlns:uploader="com.mydlp.ui.tools.air.uploader.*">
	<fx:Script>
		<![CDATA[
			
			override public function set data(value:Object):void
			{
				if (value is UploadStatus)
				{
					uploadStatus = value as UploadStatus;
					super.data = value;
				}
				else
				{
					return;
				}
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<uploader:UploadStatus id="uploadStatus" />
	</fx:Declarations>
	
	<s:HGroup width="100%" height="100%" verticalAlign="middle">
		<s:Label width="100%" text="{uploadStatus.file.name + ' [ ' + uploadStatus.file.size + ' bytes ]'}"/>
	</s:HGroup>
	
</s:ItemRenderer>
