<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
			 width="{bitmapSize + 4}" height="{bitmapSize + 4}"
             alpha.disabled="0.5">
	
	<fx:Declarations>
		<fx:Object id="bitmapSource" />
		<fx:int id="bitmapSize" />
	</fx:Declarations>
     
    <fx:Metadata>
        <![CDATA[ 
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
	
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<s:Rect includeIn="over, down" 
		height="100%" width="100%" radiusX="3">
		<s:fill>
			<!-- gradient fill colors - default ratios are 0,1 -->
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#fabe00"
								 color.down="#cc6600"/>
				<s:GradientEntry color="#e17b00"
								 color.down="#ff9900"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Group top="2" right="2" bottom="2" left="2">
		<s:layout>
			<s:HorizontalLayout />
		</s:layout>
		<s:BitmapImage source="{bitmapSource}" width="{bitmapSize}" height="{bitmapSize}" />
		<s:Label id="labelDisplay" verticalAlign="middle" maxDisplayedLines="1">
			<s:filters>
				<s:DropShadowFilter distance="1" blurX="0" blurY="0" color="#000000" alpha=".4" angle="270"/>
			</s:filters>
		</s:Label>
	</s:Group>
	
	
	
	
    
</s:SparkButtonSkin>
