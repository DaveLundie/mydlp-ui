<?xml version="1.0" encoding="utf-8"?>
<popup:ClosableTitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:general="com.mydlp.ui.widget.general.*"
				title="@Resource(bundle = 'messages', key = 'inventory.newuserdialog.title')" 
				xmlns:popup="com.mydlp.ui.widget.general.popup.*" 
				>
	<fx:Script>
		<![CDATA[
			import com.mydlp.ui.domain.InventoryItem;
			import com.mydlp.ui.domain.RemoteStorageCIFS;
			import com.mydlp.ui.domain.RemoteStorageDFS;
			import com.mydlp.ui.domain.RemoteStorageFTPFS;
			import com.mydlp.ui.domain.RemoteStorageNFS;
			import com.mydlp.ui.domain.RemoteStorageSSHFS;
			import com.mydlp.ui.domain.RuleUserAD;
			import com.mydlp.ui.domain.RuleUserStatic;
			import com.mydlp.ui.util.InteractionUtil;
			
			protected function close():void
			{
				InteractionUtil.closeCurrentPopup();
			}
			
			protected function sshfsHandler(event:MouseEvent):void
			{
				close();
				var i:InventoryItem = new InventoryItem();
				i.item = new RemoteStorageSSHFS();
				InteractionUtil.newEditDialog(i);
			}
			
			protected function ftpfsHandler(event:MouseEvent):void
			{
				close();
				var i:InventoryItem = new InventoryItem();
				i.item = new RemoteStorageFTPFS();
				InteractionUtil.newEditDialog(i);
			}
			
			protected function cifsHandler(event:MouseEvent):void
			{
				close();
				var i:InventoryItem = new InventoryItem();
				i.item = new RemoteStorageCIFS();
				InteractionUtil.newEditDialog(i);
			}
			
			protected function dfsHandler(event:MouseEvent):void
			{
				close();
				var i:InventoryItem = new InventoryItem();
				i.item = new RemoteStorageDFS();
				InteractionUtil.newEditDialog(i);
			}
			
			protected function nfsHandler(event:MouseEvent):void
			{
				close();
				var i:InventoryItem = new InventoryItem();
				i.item = new RemoteStorageNFS;
				InteractionUtil.newEditDialog(i);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:VGroup paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10"
			  horizontalAlign="center">
		<s:Label text="@Resource(bundle = 'messages', key = 'inventory.newuserdialog.message')"/>
		<s:VGroup horizontalAlign="left" >
			<s:Button skinClass="com.mydlp.ui.skin.UserStaticBitmapLabelButton16Skin" 
					  label="@Resource(bundle = 'messages', key = 'inventory.newremotestoragedialog.sshfs.label')" 
					  click="sshfsHandler(event)"/>
			<s:Button skinClass="com.mydlp.ui.skin.UserDirectoryBitmapLabelButton16Skin" 
					  label="@Resource(bundle = 'messages', key = 'inventory.newremotestoragedialog.ftpfs.label')" 
					  click="ftpfsHandler(event)"/>
			<s:Button skinClass="com.mydlp.ui.skin.UserStaticBitmapLabelButton16Skin" 
					  label="@Resource(bundle = 'messages', key = 'inventory.newremotestoragedialog.cifs.label')" 
					  click="cifsHandler(event)"/>
			<s:Button skinClass="com.mydlp.ui.skin.UserDirectoryBitmapLabelButton16Skin" 
					  label="@Resource(bundle = 'messages', key = 'inventory.newremotestoragedialog.dfs.label')" 
					  click="dfsHandler(event)"/>
			<s:Button skinClass="com.mydlp.ui.skin.UserDirectoryBitmapLabelButton16Skin" 
					  label="@Resource(bundle = 'messages', key = 'inventory.newremotestoragedialog.nfs.label')" 
					  click="nfsHandler(event)"/>
		</s:VGroup>
	</s:VGroup>
	
</popup:ClosableTitleWindow>
