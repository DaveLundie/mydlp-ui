<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false" currentState="{data == 'pending' ? 'pending' : 'normal'}" 
				>
	<fx:Script>
		<![CDATA[
			import com.mydlp.ui.util.LangUtil;
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<mx:DateFormatter id="dateFormatter" formatString="DD/MM/YYYY HH:NN:SS"/>  
	</fx:Declarations>
	
	<s:states>
		<s:State name="pending" />
		<s:State name="normal" />
	</s:states>
	
	
	<s:layout>
		<s:HorizontalLayout verticalAlign="middle" horizontalAlign="center"
							paddingTop="5" paddingBottom="5" 
							paddingRight="10" />
	</s:layout>
	
	<s:Label includeIn="pending" width="100%" textAlign="center"  text="{LangUtil.getString('messages','endpointStatus.pending.message')}"/>
	
	<s:HGroup width="100%" height="100%">
		<s:VGroup width="120" height="100%">
			<s:Label text="{LangUtil.getString('messages','endpointStatus.ipAddress.label') + ': ' + data.ipAddress}" width="100%"/>
			<s:Label text="{data.isUpToDate ? LangUtil.getString('messages','endpointStatus.isUpToDate.true.label') : 
					 LangUtil.getString('messages','endpointStatus.isUpToDate.false.label')}" width="100%"/>
		</s:VGroup>
		<s:VGroup width="100%" height="100%">
			<s:Label text="{LangUtil.getString('messages','endpointStatus.firstSeen.label') + ': ' + dateFormatter.format(data.firstAppeared)}" width="100%"/>
			<s:Label text="{LangUtil.getString('messages','endpointStatus.lastSeen.label') + ': ' + dateFormatter.format(data.lastUpdate)}" width="100%"/>
		</s:VGroup>
	</s:HGroup>
	
</s:ItemRenderer>
