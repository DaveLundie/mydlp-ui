<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				width="100%" height="100%">
	
	<fx:Script>
		<![CDATA[
			import com.mydlp.ui.domain.RuleItem;
			
			import mx.events.FlexEvent;
			
			public override function set data(value:Object):void
			{
				super.data = value as RuleItem;
				dispatchEvent(new FlexEvent(FlexEvent.DATA_CHANGE));
			}
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="hovered" />
		<s:State name="selected" />
	</s:states>
	
	<s:Group left="0" right="0" top="0" bottom="0"
			 minHeight="20">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle"
					paddingLeft="4" paddingRight="4"/>
		</s:layout>
		<s:BitmapImage source="{data.item.coupledInventoryItem.icon}" />
		<s:Label text="{data.item.coupledInventoryItem.label}" width="98%"/>
	</s:Group>
	
	<s:HGroup left="0" right="0" top="0" bottom="0" includeIn="selected"
			  verticalAlign="middle"
			  horizontalAlign="right">
		<s:SkinnableContainer backgroundColor="0xCEDBEF" backgroundAlpha="1">
			<s:layout>
				<s:HorizontalLayout verticalAlign="middle"
									horizontalAlign="right"
									paddingLeft="2" paddingRight="2"/>
			</s:layout>
			<s:Button styleName="removeButtonStyle" 
					  click="{data.deleteRecord()}" toolTip="@Resource(key='ruleItems.removeButton.tooltip.label', bundle='messages')"/>
		</s:SkinnableContainer>

	</s:HGroup>
	
	<s:Rect left="0" right="0" top="0" bottom="0"
			includeIn="hovered,selected">
		<s:fill>
			<s:SolidColor color="0x000000"
						  alpha="0.12" alpha.selected="0.18" />
		</s:fill>
	</s:Rect>
	
</s:ItemRenderer>
