<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:util="com.mydlp.ui.util.*"
		 width="300" height="125" >
	<fx:Declarations>
		<fx:Number id="currentPercent" />
		<fx:String id="label" />
	</fx:Declarations>
	<s:Rect left="0" right="0" top="0" bottom="0" >
		<s:stroke>
			<s:SolidColorStroke color="0xAEBBCF" alpha="0.3" weight="3"/>
		</s:stroke>
	</s:Rect>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle" horizontalAlign="center" 
							  paddingBottom="5" paddingTop="5" 
							  paddingLeft="5" paddingRight="5"/>
		</s:layout>
		<s:Label text="{label} :" width="150"/>
		<s:Group width="50" height="100">
			<s:Rect left="0" right="0" top="0" bottom="0" >
				<s:stroke>
					<s:SolidColorStroke color="0xAEBBCF" alpha="1.0" weight="2"/>
				</s:stroke>
			</s:Rect>
			<s:Rect left="0" right="0" top="0" bottom="{currentPercent}" >
				<s:fill>
					<s:SolidColor color="0xAEBBCF" alpha="0.3" />
				</s:fill>
			</s:Rect>
			<s:Rect left="0" right="0" top="{100-currentPercent}" bottom="0" >
				<s:fill>
					<s:SolidColor color="0xAEBBCF" alpha="1.0" />
				</s:fill>
			</s:Rect>
		</s:Group>
	</s:Group>
</s:Group>
