<?xml version="1.0" encoding="utf-8"?>
<s:TextInput xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx"
				change="changeHandler(event)"
				text=""
				>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			private var _numberValue:uint;
			
			private static const NUMBER_VALUE_CHANGE_EVENT:String = "numberValueChanged";
			
			public static function numberToIPStr(value:Number):String
			{
				var rNumber:Number = new Number(value);
				var tString:String = "";
				var i4:int;
				var i3:int;
				var i2:int;
				var i1:int;
				i4 = rNumber%256;
				rNumber -= i4;
				rNumber /= 256;
				i3 = rNumber%256;
				rNumber -= i3;
				rNumber /= 256;
				i2 = rNumber%256;
				rNumber -= i2;
				rNumber /= 256;
				i1 = rNumber;
				return i1 + "." + i2 + "." + i3 + "." + i4;
			}
			
			protected function changeHandler(event:Event):void
			{
				var tempIp:Array=text.split(".");
				_numberValue = ((int)(tempIp[0])*16777216) + ((int)(tempIp[1])*65536) + ((int)(tempIp[2])*256) + (int)(tempIp[3]);
				dispatchEvent(new Event(NUMBER_VALUE_CHANGE_EVENT));
			}
			
			[Bindable(event=NUMBER_VALUE_CHANGE_EVENT)]
			public function get numberValue():Number
			{
				return _numberValue;
			}
			
			public function set numberValue(value:Number):void
			{
				if (isNaN(value))
				{
					text = "0.0.0.0";
					_numberValue = 0;
				}
				else
				{
					text = numberToIPStr(value);
					_numberValue = value;
				}
				dispatchEvent(new Event(NUMBER_VALUE_CHANGE_EVENT));
			}
			
		]]>
	</fx:Script>
</s:TextInput>
