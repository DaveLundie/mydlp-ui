<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 xmlns:rule="com.mydlp.ui.widget.policy.rule.*">
	<fx:Script>
		<![CDATA[
			import mx.collections.ListCollectionView;
			[Bindable]
			public var listDataProvider:ListCollectionView;
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<fx:String id="noneMessage" />
		
	</fx:Declarations>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="noitem" />
	</s:states>
	
	
	<s:Group left="0" right="0" top="0" bottom="0" includeIn="noitem">
		<s:layout>
			<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" 
							  paddingBottom="4" paddingTop="4" />
		</s:layout>
		
		<s:Label text="{noneMessage}" fontStyle="italic"/>
	
	</s:Group>
	
	<s:Group left="0" right="0" top="0" bottom="0" includeIn="normal">
		<s:layout>
			<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" 
							  paddingBottom="4" paddingTop="4"/>
		</s:layout>
		
		<rule:RuleItemList	width="100%"
							height="100%"
							dataProvider="{listDataProvider}"
							itemRenderer="com.mydlp.ui.widget.policy.rule.RuleItemRenderer"
							verticalScrollPolicy="off"
							horizontalScrollPolicy="off"
							/>
	</s:Group>
	
</s:Group>
