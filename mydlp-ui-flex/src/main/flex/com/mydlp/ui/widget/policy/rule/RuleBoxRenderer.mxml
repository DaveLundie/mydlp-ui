		<fx:Class id="icon24" />
		<fx:Class id="icon32" />
		<my:remote id="re" destination="ruleBRS">
			<my:method name="save" result="saveHandler(event)"/>
			<my:method name="removeRuleItems" result="deleteRuleItemsHandler(event)"/>
			<my:method name="getDiscoveryStatus" result="getDiscoveryStatusHandler(event)"/>
		</my:remote>
		<my:remote id="de" destination="discoveryBRS" >
