			public override function set data(value:Object):void
			{
				super.data = value;
				if(value == null) return;
				populate();
			}
			
			protected function populate():void
			{
				if (data is WebRule)
				{
					ruleTypeImage.source = webRuleIcon;
				}
				else if (data is MailRule)
				{
					ruleTypeImage.source = mailRuleIcon;
				}
				else if (data is RemovableStorageRule)
				{
					ruleTypeImage.source = removableStorageRuleIcon;
				}
				else if (data is PrinterRule)
				{
					ruleTypeImage.source = printerRuleIcon;
				}
				else if (data is DiscoveryRule)
				{
					ruleTypeImage.source = discoveryRuleIcon;
				}
				else if (data is ApiRule)
				{
					ruleTypeImage.source = apiRuleIcon;
				}
				else if (data is RemovableStorageInboundRule)
				{
					ruleTypeImage.source = removableStorageInboundRuleIcon;
				}
				else if (data is ScreenshotRule)
				{
					ruleTypeImage.source = screenshotRuleIcon;
				}
					
				else
					throw new Error("Unknown rule type;");
				
				ruleObject = data;
				refresh();
			}
			
			public function refreshDataProviders(): void
			{
				var sourceDataProvider1:ArrayCollection = new ArrayCollection();
				var matcherDataProvider1:ArrayCollection = new ArrayCollection();
				var destinationDataProvider1:ArrayCollection = new ArrayCollection();
				
				var ruleItems:ListCollectionView = ruleObject.ruleItems;
				for each (var ruleItem:* in ruleItems)
				{
					if (ruleItem.item is Network ||
						ruleItem.item is RuleUser )
						sourceDataProvider1.addItem(ruleItem);
					else if (ruleItem.item is InformationType)
						matcherDataProvider1.addItem(ruleItem);
					else if (ruleItem.item is Domain ||
						ruleItem.item is FileSystemDirectory)
						destinationDataProvider1.addItem(ruleItem);
				}
				sourceDataProvider = sourceDataProvider1;
				matcherDataProvider = matcherDataProvider1;
				destinationDataProvider = destinationDataProvider1;
			}
			
			public function refresh():void
			{
				if (ruleObject == null) return;
				invalidateDisplayList();
				refreshDataProviders();
				validateNow();
			}
			
			public static function isSourceRuleItem(item:Item):Boolean
			{
				if(item is Network)
					return true;
				else if(item is RuleUser)
					return true;
				else
					return false;
			}
			
			protected function hasAllNetwork():Boolean // Checks whether rule has "All Network" or not. 
			{
				for each(var o:RuleItem in ruleObject.ruleItems)
				{
					if(o.item.coupledInventoryItem.nameKey == SOURCES_ALL)
						return true;
				}
				return false;
			}
			
			protected function hasAllDestination():Boolean //Checks whether rule has "All Destination" or not.
			{
				for each(var o:RuleItem in ruleObject.ruleItems)
				{
					if(o.item.coupledInventoryItem.nameKey == DOMAIN_ALL || o.item.coupledInventoryItem.nameKey == DIRECTORY_ALL)
						return true;
				}
				return false;
			}
			
			public static function isITypeRuleItem(item:Item):Boolean
			{
				if(item is InformationType)
					return true;
				else
					return false;
			}
			
			public static function isDestinationRuleItem(item:Item):Boolean
			{
				if(item is Domain || item is FileSystemDirectory)
					return true;
				else
					return false;
			}
			
			protected function removeAllSourcesItem():void //called when "All Network" is in rule and dropped network is a specific network.
			{
				var ruleItems:ListCollectionView = ruleObject.ruleItems;
				var loop:Boolean = true;
				while (loop)
				{
					loop = false;
					for(var i:int = 0; i < ruleItems.length; i++)
					{
						if(ruleItems[i].item.coupledInventoryItem.nameKey == SOURCES_ALL)
						{
							deleteList.addItem(ruleObject.ruleItems[i]);
							ruleObject.ruleItems.removeItemAt(i);
							loop = true;
							break;
						}
					}
				}
			}
			
			protected function removeOtherSources():void // called when specific networks are in rule and dropped network is "All Network"
			{
				var ruleItems:ListCollectionView = ruleObject.ruleItems;
				var loop:Boolean = true;
				while (loop)
				{
					loop = false;
					for(var i:int = 0; i < ruleItems.length; i++)
					{
						if(isSourceRuleItem(ruleItems[i].item))
						{
							deleteList.addItem(ruleObject.ruleItems[i]);
							ruleItems.removeItemAt(i);
							loop = true;
							break;
						}
					}	
				}
			}
			
