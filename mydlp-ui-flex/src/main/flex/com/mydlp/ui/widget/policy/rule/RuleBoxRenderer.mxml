					<s:HorizontalLayout gap="2"/>
				</s:layout>
				
				<s:Button styleName="upButtonStyle" toolTip="@Resource(bundle = 'messages', key = 'rulebox.upButton.tooltip.label')"
						  enabled="{itemIndex != 0}"
						  click="{re.ruleUp(ruleObject)}"/>
				<s:Button styleName="downButtonStyle" toolTip="@Resource(bundle = 'messages', key = 'rulebox.downButton.tooltip.label')"
						  enabled="{itemIndex != ruleList.dataProvider.length - 1}"
						  click="{re.ruleDown(ruleObject)}"/>
				<s:Button styleName="copyButtonStyle" toolTip="@Resource(bundle = 'messages', key = 'rulebox.copyButton.tooltip.label')"
						  click="{	var clone:Rule = ReflectionUtil.cloneDomainObject(ruleObject);
						  clone.priority -= 50;
						  InteractionUtil.newEditDialog(clone)}" />
				<s:Button styleName="editButtonStyle" toolTip="@Resource(bundle = 'messages', key = 'rulebox.editButton.tooltip.label')"
						  click="{InteractionUtil.newEditDialog(ruleObject)}" />
				<s:Button styleName="removeButtonStyle" toolTip="@Resource(bundle = 'messages', key = 'rulebox.removeButton.tooltip.label')"
						  click="{InteractionUtil.newDeleteDialog(ruleObject)}" />
				<s:Button styleName="disableButton16Style" toolTip="@Resource(bundle = 'messages', key = 'rulebox.disableButton.tooltip.label')"
						  visible="{ruleObject.enabled}"
						  click="{ruleObject.enabled = false; re.save(ruleObject);}"/>
			</s:Group>
		</s:Group>
		
		<s:Button styleName="disableButton32Style" visible="{! ruleObject.enabled}"
				  click="{ruleObject.enabled = true; re.save(ruleObject);}" toolTip="@Resource(bundle = 'messages', key = 'rulebox.enableButton.tooltip.label')"/>
		
		<rule:RSpacer />
		
		<rule:RuleItemBox width="160"
						  listDataProvider="{sourceDataProvider}"
						  noneMessage="@Resource(bundle = 'messages', key = 'rulebox.ruleitembox.sources.nonemessage')"
						  currentState="{sourceDataProvider.length == 0 ? 'noitem' : 'normal'}" />
		
		
		<s:Group width="180" height="100%" 
				 visible="{!isDestinationApplicable(ruleObject)}" 
				 includeInLayout="{!isDestinationApplicable(ruleObject)}">
			<s:Rect left="0" right="0" top="0" bottom="0" >
				<s:fill>
					<s:SolidColor color="0xAEBBCF" alpha="0.3"  />
				</s:fill>
			</s:Rect>
		</s:Group>
		
		
		<s:Group height="100%"
				 visible="{isDestinationApplicable(ruleObject)}" 
				 includeInLayout="{isDestinationApplicable(ruleObject)}">
			<s:layout>
				<s:HorizontalLayout verticalAlign="middle"/>
			</s:layout>
			<rule:RSpacer />
			
			<rule:RuleItemBox width="170"
							  listDataProvider="{destinationDataProvider}"
							  noneMessage="@Resource(bundle = 'messages', key = 'rulebox.ruleitembox.destinations.nonemessage')"
							  currentState="{destinationDataProvider.length == 0 ? 'noitem' : 'normal'}" />
			
		</s:Group> 
		
		<s:Group width="220" height="100%" 
				 visible="{!isMatcherApplicable(ruleObject)}" 
				 includeInLayout="{!isMatcherApplicable(ruleObject)}">
			<s:Rect left="0" right="0" top="0" bottom="0" >
				<s:fill>
					<s:SolidColor color="0xAEBBCF" alpha="0.3"  />
				</s:fill>
			</s:Rect>
		</s:Group>
		
		
		<s:Group height="100%"
				 visible="{isMatcherApplicable(ruleObject)}" 
				 includeInLayout="{isMatcherApplicable(ruleObject)}">
			<s:layout>
				<s:HorizontalLayout verticalAlign="middle"/>
			</s:layout>
			<rule:RSpacer />	
			<rule:RuleItemBox width="200"
							  listDataProvider="{matcherDataProvider}"
							  noneMessage="@Resource(bundle = 'messages', key = 'rulebox.ruleitembox.itypes.nonemessage')"
							  currentState="{matcherDataProvider.length == 0 ? 'noitem' : 'normal'}" />
			<rule:RSpacer />
		</s:Group>
		
		<rule:ActionBox id="actionBox" width="160" 
						ruleObject="@{ruleObject}" 
						currentState="{this.currentState}"/>
		
	</s:Group>
</s:ItemRenderer>
