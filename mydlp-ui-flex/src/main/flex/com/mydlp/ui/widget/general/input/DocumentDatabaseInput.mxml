<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:my="http://www.mydlp.com/flex/my"
					  xmlns:mx="library://ns.adobe.com/flex/mx"
					  width="100%" height="150">
	<fx:Script>
		<![CDATA[
			import com.mydlp.ui.domain.DocumentDatabaseFileEntry;
			import com.mydlp.ui.util.InteractionUtil;
			
			
			public var deleteList:ListCollectionView = null;
			
			public function addEntry(rge:DocumentDatabaseFileEntry): void
			{
				fileEntries.addItem(rge);
				fileEntriesList.validateNow();
			}
			
			protected function removeClickHandler(event:MouseEvent):void
			{
				fileEntriesList.dataGroup.invalidateDisplayList();
				for each (var o:Object in fileEntriesList.selectedIndices)
				{
					deleteList.addItem(fileEntries.getItemAt(o as int));
					fileEntries.removeItemAt(o as int);		
				}
				fileEntriesList.validateNow();
			}
			
			protected function addClickHandler(event:MouseEvent):void
			{
				var ddPopup:DocumentDatabasePopup = InteractionUtil.newPopup(DocumentDatabasePopup) as DocumentDatabasePopup;
				ddPopup.documentDatabaseInput = this;
				ddPopup.populate();
			}
			
			protected function editClickHandler(event:MouseEvent):void
			{
				var regp:DocumentDatabasePopup = InteractionUtil.newPopup(DocumentDatabasePopup) as DocumentDatabasePopup;
				regp.documentDatabaseInput = this;
				regp.fileEntry = fileEntriesList.selectedItem;
				regp.populate();
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<mx:ListCollectionView id="fileEntries" />
	</fx:Declarations>
	
	<s:layout>
		<s:HorizontalLayout verticalAlign="middle" gap="2"/>
	</s:layout>
	
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle" gap="2"/>
		</s:layout>
		<s:List id="fileEntriesList" dataProvider="{fileEntries}" 
				width="87%" height="100%" 
				itemRenderer="com.mydlp.ui.widget.general.input.DocumentDatabaseRenderer">
			<s:layout>
				<s:VerticalLayout useVirtualLayout="false" requestedMinRowCount="1"/>
			</s:layout>
		</s:List>
		<s:Group width="13%" height="100%">
			<s:layout>
				<s:VerticalLayout verticalAlign="middle" horizontalAlign="center" gap="2"/>
			</s:layout>
			<s:Button skinClass="com.mydlp.ui.skin.AddBitmapButton32Skin" click="addClickHandler(event)"/>
			<s:Button skinClass="com.mydlp.ui.skin.EditBitmapButton32Skin" click="editClickHandler(event)"/>
			<s:Button skinClass="com.mydlp.ui.skin.RemoveBitmapButton32Skin" click="removeClickHandler(event)"/>
		</s:Group>
	</s:Group>
	
</s:SkinnableContainer>
