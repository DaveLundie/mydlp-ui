<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:my="http://www.mydlp.com/flex/my"
					  xmlns:mx="library://ns.adobe.com/flex/mx"
					  width="{InputLabel.VERTICAL_INPUT_WIDTH*1.2}"
					  creationComplete="onCreationComplete(event)"
					  xmlns:util="com.mydlp.ui.util.*" xmlns:domain="com.mydlp.ui.domain.*">
	<fx:Script>
		<![CDATA[
			import com.mydlp.ui.domain.WebServer;
			import com.mydlp.ui.widget.general.popup.InputLabel;
			
			import mx.collections.ArrayCollection;
			import mx.collections.ListCollectionView;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			
			import spark.events.IndexChangeEvent;
			import spark.events.TextOperationEvent;

			
			protected static var protocols:ListCollectionView = 
				new ArrayCollection(
					new Array(
						WebServer.PROTO_HTTP,
						WebServer.PROTO_HTTPS
					)
				);
			
			[Bindable]
			public var proto:String;
			
		/*	protected function onChangeProtocol(event:IndexChangeEvent):void
			{
				if (protocolDropDown.selectedIndex == 0)
				{
					proto = WebServer.PROTO_HTTP;
					portText.text = "80";
				}
				else if (protocolDropDown.selectedIndex == 1)
				{
					proto = WebServer.PROTO_HTTPS;
					portText.text = "443";	
				}
			}*/
			
			protected function onCreationComplete(event:FlexEvent):void
			{
				if(proto != null && address != null && startPath != null)
					addressText.text = proto + "://" + address + "/" + startPath;
				else if(proto != null && proto != "")
				{
					addressText.text = proto + "://";
				}
				else
				{	
					addressText.text = "http://";
				}
				
				if(port != null &&  port != "" && port != "0")
				{
					addressText.text  +=  ":" + port;
				}
			}
			
			protected function genericSplitUrl(delimeter:String, source:String):Array
			{
				var sArray:Array = source.split(delimeter);
				var result:Array = new Array;
				var first:String = sArray[0];
				var sArray2:Array = new Array;
				for(var i:int = 1; i < sArray.length; i++)
				{
					sArray2.push(sArray[i]);
				}
				var second:String = sArray2.join(delimeter);
				result.push(first);
				if(sArray.length == 1)
					result.push("");
				else
					result.push(second);
				return result;
			}
			
			protected function onChangeHandler(event:TextOperationEvent):void
			{
				var pArray:Array = genericSplitUrl("://", addressText.text);
				proto = pArray[0];
				var aArray:Array = genericSplitUrl("/", pArray[1]);
				address = aArray[0];
				var sArray = genericSplitUrl(":", aArray[1]);
				startPath = sArray[0];
				if(sArray[1] == null || sArray[1] == "")
				{
					if(proto == "http")
						port = "80";
					else
						port = "443";
				}
				else
					port = sArray[1];
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<fx:String id="address"/>
		<fx:String id="port"/>
		<fx:String id="startPath"/>
	</fx:Declarations>
	
	<s:layout>
		<s:HorizontalLayout verticalAlign="middle" gap="2"/>
	</s:layout>
	
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout gap="20"/>
		</s:layout>
		<s:Group width="100%">			
			<s:layout>
				<s:HorizontalLayout gap="2" verticalAlign="middle"/>
			</s:layout>
			<s:TextInput id="addressText" width="100%" change="onChangeHandler(event)"/>
		</s:Group>
	</s:Group>
	
</s:SkinnableContainer>
