<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:mx="library://ns.adobe.com/flex/mx"
					  xmlns:util="com.mydlp.ui.util.*" 
					  xmlns:dashboard="com.mydlp.ui.widget.dashboard.*"
					  width="100%" height="100%">
	
	<s:layout>
		<s:HorizontalLayout horizontalAlign="center" />
	</s:layout>
	
	<s:Group width="30%" height="100%">
		<s:layout>
			<s:VerticalLayout verticalAlign="middle" horizontalAlign="center" gap="20"/>
		</s:layout>
		<dashboard:PercentageDisplayBox currentPercent="12" label="@Resource(bundle = 'messages', key = 'dashboard.cpuusage.label')" />
		<dashboard:PercentageDisplayBox currentPercent="66" label="@Resource(bundle = 'messages', key = 'dashboard.memoryusage.label')" />
		<dashboard:PercentageDisplayBox currentPercent="25" label="@Resource(bundle = 'messages', key = 'dashboard.diskusage.label')" />
	</s:Group>
	<s:Group width="40%" height="100%">
		<s:layout>
			<s:VerticalLayout verticalAlign="middle" horizontalAlign="center" gap="20"/>
		</s:layout>
		<dashboard:LicenseBox />
		<s:Spacer height="10" />
		<s:BitmapImage source="@Embed('/assets/images/logo_314x124.png')" />
		<dashboard:AlertBox />
	</s:Group>
	<s:Group width="30%" height="100%">
		<s:layout>
			<s:VerticalLayout verticalAlign="middle" horizontalAlign="center" gap="20"/>
		</s:layout>
		<dashboard:RSSFeedBox rssKey="blogrss" title="MyDLP Blog"/>
		<dashboard:RSSFeedBox rssKey="datalossdbrss" title="DataLossDB"/>
	</s:Group>
</s:SkinnableContainer>
