<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				click="onItemClick(event)"
				creationComplete="{checkBox.selected=this.selected}">
	
	<fx:Script>
		<![CDATA[
			import mx.events.ItemClickEvent;
			
			import spark.events.IndexChangeEvent;
			
			public override function set data(value:Object):void
			{
				super.data = value;
				if(value == null) return;
				if(this.selected)
					checkBox.selected = true;
				else
					checkBox.selected = false;
				checkBox.label = data.coupledInventoryItem.label;
			}
			
			protected function onItemClick(event:MouseEvent):void
			{
				checkBox.selected = !checkBox.selected;
				var e:ItemClickEvent = new ItemClickEvent(ItemClickEvent.ITEM_CLICK, true);
				e.item = data;
				if(this.checkBox.selected)
				{
					e.index = itemIndex;
				}
				else
					e.index = -1;
				dispatchEvent(e);
				
			}
			
			protected function onChangeHandler(event:Event):void
			{
				var e:IndexChangeEvent = new IndexChangeEvent(IndexChangeEvent.CHANGE, true);
				e.newIndex = itemIndex;
				e.oldIndex = -1;
				dispatchEvent(e);
			}
		]]>
	</fx:Script>
	
	
	<s:CheckBox id="checkBox" />
	
</s:ItemRenderer>
